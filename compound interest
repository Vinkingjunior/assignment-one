#include <stdio.h>
#include <math.h>

int main() {
    float principal, rate, time, compoundinterest, n;
    printf("enter the principle amount: ");
    scanf("%f", &principal);
    
    printf("enter the rate: ");
    scanf("%f", &rate);
    
    printf("enter the time: ");
    scanf("%f", &time);
    
    printf("enter n: ");
    scanf("%f", &n);
    
    compoundinterest = principal * pow(1 + (rate / n), n * time);
    printf("compound interest: %f", compoundinterest);
    
    return 0;
}
